<body>
  <div class="warning" id="warning">
    <h2>‚ö†Ô∏è GX Antivirus Alert</h2>
    <p>Potential malware/phishing detected on this page!</p>
    <button class="continue-btn" onclick="continueAnyway()">Continue Anyway</button>
  </div>
  
  <div class="header">
    <div class="logo">üõ°Ô∏è</div>
    <div class="title">GX Antivirus Protection</div>
  </div>
  
  <div class="status on" id="status">
    <span class="shield">üõ°Ô∏è Protected</span>
    <span class="stats" id="stats">0 threats today</span>
  </div>
  
  <button id="scanBtn">üîç Quick Scan</button>
  <progress id="progress" style="display:none"></progress>
  <button id="quarantineBtn" disabled>üóëÔ∏è Quarantine (0)</button>
  
  <div class="log" id="log">Status: Ready for protection...</div>

  <script>
    class GXAntivirus {
      constructor() {
        this.enabled = true;
        this.threats = 0;
        this.isScanning = false;
        this.malwareDomains = ['malware.com', 'phish.ru', 'fakebank.net'];
        this.init();
      }
      
      init() {
        this.bindEvents();
        this.checkCurrentPage();
        this.simulateRealTime();
      }
      
      bindEvents() {
        document.getElementById('scanBtn').onclick = () => this.quickScan();
        document.getElementById('quarantineBtn').onclick = () => this.quarantine();
      }
      
      checkCurrentPage() {
        const hostname = window.location.hostname;
        if (this.malwareDomains.some(domain => hostname.includes(domain))) {
          document.getElementById('warning').style.display = 'block';
          this.log('üö® MALWARE SITE DETECTED - Page blocked!');
        }
      }
      
      quickScan() {
        if (this.isScanning) return;
        
        this.isScanning = true;
        const scanBtn = document.getElementById('scanBtn');
        const progress = document.getElementById('progress');
        const log = document.getElementById('log');
        
        scanBtn.disabled = true;
        scanBtn.textContent = 'Scanning...';
        progress.style.display = 'block';
        progress.indeterminate = true;
        
        // Simulate file scanning
        let scanned = 0;
        const files = ['system32.dll', 'update.exe', 'chrome.exe', 'malware.exe', 'doc.pdf'];
        const interval = setInterval(() => {
          if (scanned >= files.length) {
            clearInterval(interval);
            this.scanComplete();
            return;
          }
          
          const file = files[scanned];
          this.log(`Scanning: ${file}`);
          
          // 20% chance of finding threat
          if (Math.random() < 0.2 && file.includes('malware')) {
            this.threats++;
            this.log(`‚ùå THREAT: ${file} (Trojan)`, 'threats');
          }
          
          scanned++;
        }, 300);
      }
      
      scanComplete() {
        this.isScanning = false;
        document.getElementById('scanBtn').disabled = false;
        document.getElementById('scanBtn').textContent = 'üîç Quick Scan';
        document.getElementById('progress').style.display = 'none';
        document.getElementById('quarantineBtn').disabled = this.threats === 0;
        document.getElementById('quarantineBtn').textContent = `üóëÔ∏è Quarantine (${this.threats})`;
        
        if (this.threats > 0) {
          this.log(`‚ùå Scan complete: ${this.threats} threats found!`);
          document.getElementById('status').className = 'status off';
          document.querySelector('#status span').textContent = '‚ö†Ô∏è Threats Found';
        } else {
          this.log('‚úÖ Scan complete: System clean!');
        }
      }
      
      quarantine() {
        this.threats = 0;
        document.getElementById('quarantineBtn').disabled = true;
        document.getElementById('quarantineBtn').textContent = 'üóëÔ∏è Quarantine (0)';
        document.getElementById('status').className = 'status on';
        document.querySelector('#status span').textContent = 'üõ°Ô∏è Protected';
        this.log('üóëÔ∏è All threats QUARANTINED successfully!');
      }
      
      log(msg, className = '') {
        const log = document.getElementById('log');
        const time = new Date().toLocaleTimeString();
        log.innerHTML += `<div class="${className}">[${time}] ${msg}</div>`;
        log.scrollTop = log.scrollHeight;
      }
      
      simulateRealTime() {
        setInterval(() => {
          if (Math.random() < 0.1) {
            this.log('üîÑ Real-time protection: Ad network blocked');
          }
        }, 10000);
      }
    }
    
    function continueAnyway() {
      document.getElementById('warning').style.display = 'none';
    }
    
    // Initialize GX Antivirus
    const gx = new GXAntivirus();
  </script>
