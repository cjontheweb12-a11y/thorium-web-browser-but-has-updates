  <script>
    // Real-time slider sync
    function updateSlider(id, type) {
      const slider = document.getElementById(id + 'Slider');
      const val = document.getElementById(id + 'Val');
      const display = document.getElementById(id + 'Display');
      
      slider.oninput = () => {
        const value = slider.value;
        val.textContent = type === 'ram' ? value + 'GB' : type === 'net' ? value + 'Mbps' : value + '%';
        display.textContent = val.textContent;
      }
    }
    
    updateSlider('cpu', 'cpu');
    updateSlider('ram', 'ram');
    updateSlider('net', 'net');
    
    // Live stats animation
    function animateStats() {
      ['cpuCurrent', 'ramCurrent', 'netCurrent'].forEach(id => {
        const elem = document.getElementById(id);
        let current = parseFloat(elem.textContent);
        current += (Math.random() - 0.5) * 5;
        elem.textContent = current.toFixed(1) + (id.includes('GB') ? 'GB' : id.includes('Mbps') ? 'Mbps' : '%');
      });
    }
    setInterval(animateStats, 2000);
    
    // Master toggle
    document.getElementById('masterSwitch').onclick = () => {
      document.getElementById('masterStatus').textContent = 
        document.getElementById('masterSwitch').checked ? 'ENABLED' : 'DISABLED';
    }
    
    function applyLimits() {
      const cpu = document.getElementById('cpuSlider').value;
      const ram = document.getElementById('ramSlider').value;
      const net = document.getElementById('netSlider').value;
      
      // Epic notification
      const notification = `
        üéÆ THORIUM GX LIMITS APPLIED!
        üß† CPU: ${cpu}% 
        üíæ RAM: ${ram}GB
        üåê Network: ${net}Mbps
        üöÄ READY FOR GAMING!
      `;
      
      // Visual explosion effect
      document.body.style.animation = 'shake 0.5s';
      setTimeout(() => document.body.style.animation = '', 500);
      
      alert(notification);
      console.log(`%c${notification}`, 'color: #00d4aa; font-size: 16px; font-weight: bold;');
    }
    
    function activateGamingMode() {
      // Gaming mode magic
      document.querySelectorAll('.control-card').forEach((card, i) => {
        setTimeout(() => {
          card.style.background = 'linear-gradient(45deg, rgba(255,107,122,0.2), rgba(0,212,170,0.2))';
          card.style.borderColor = '#ff6b35';
        }, i * 200);
      });
      
      alert('üî• GAMING MODE ACTIVATED!\nThorium now optimized for 144+ FPS!');
    }
    
    // Welcome message
    setTimeout(() => {
      alert('‚ö° Welcome to THORIUM GX CONTROL!\nBetter than Opera GX - REAL performance control!');
    }, 1000);
  </style>
</script>
